<h1>Category Index</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Item</th>
  </tr>
 
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.item %></td>
      <td><%= link_to 'Destroy', item, method: :delete, data: {confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
</table>
