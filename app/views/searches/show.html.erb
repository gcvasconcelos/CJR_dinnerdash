<h1>Search Result</h1>

<p><%= link_to 'Back', new_search_path %></p>

<% if @search.search_items.empty? %>
	
	<p>No Records Found</p>

<% else %>

	<% @search.search_items do |c| %>
		
		<br>

		<div class="div">
			<h1><%= c.name %></h1>
			<p>Price: <%= c.price %></p>
			<p>Category: <%= c.category %></p>
		</div>

	<% end %>

<% end %>