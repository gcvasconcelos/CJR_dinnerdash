<h1>Listing items</h1>

<div class="container">
  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Add to cart</th>
    </tr>
   
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= link_to "Cart", add_cart_path(item) %></td>
      </tr>
    <% end %>
</div>

</table>

<%= link_to 'New item', new_item_path %>